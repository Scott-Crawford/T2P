{
  "manifest_version": 2,

  "name": "T2P",
  "description": "This extension replaces no-no words with pictures",
  "version": "1.0",
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Settings"
  },
  
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://*.google.com/",
    "https://*.google.com/"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }

  

  
}