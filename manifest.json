{
  "manifest_version": 2,

  "name": "T2P",
  "description": "This extension replaces no-no words with pictures",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Settings"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://*.google.com/",
    "https://*.google.com/"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["myscript.js"],
      "run_at": ["document_end"]
    }
  ]

  
}