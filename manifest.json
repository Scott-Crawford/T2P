{
   "manifest_version":2,
   "name":"T2P",
   "description":"Replace user defined pharses with customizable pictures",
   "version":"1.0.0",
   "browser_action":{
      "default_icon":"src/images/icon.png",
      "default_popup":"popup.html",
      "default_title":"Settings"
   },
   "icons":{
      "256":"src/logo/256.png",
      "512":"src/logo/512.png"
   },
   "permissions":[
      "activeTab",
      "tabs",
      "<all_urls>"
   ],
   "content_scripts":[
      {
         "matches":[
            "<all_urls>"
         ],
         "css": [
            "src/styles/content.css"
         ],
         "js": [
            "src/scripts/fard.js",
            "src/scripts/content.js"
         ]
      }
   ],
   "background": {
      "scripts": ["src/scripts/background.js"]
   },
   "web_accessible_resources":[
      "src/images/Default/1.jpg",
      "src/images/Default/2.jpg",
      "src/images/Default/3.jpg",
      "src/images/Default/4.jpg",
      "src/images/Default/5.jpg",
      "src/images/Default/6.jpg",
      "src/images/Default/7.jpg",
      "src/images/Default/8.jpg",
      "src/images/Cat/1.jpg",
      "src/images/Cat/2.jpg",
      "src/images/Cat/3.jpg",
      "src/images/Cat/4.jpg",
      "src/images/Cat/5.jpg",
      "src/images/Cat/6.jpg",
      "src/images/Cat/7.jpg",
      "src/images/Cat/8.jpg",
      "src/images/Doge/1.jpg",
      "src/images/Doge/2.jpg",
      "src/images/Doge/3.jpg",
      "src/images/Doge/4.jpg",
      "src/images/Doge/5.jpg",
      "src/images/Doge/6.jpg",
      "src/images/Doge/7.jpg",
      "src/images/Doge/8.jpg",
      "src/images/Pitt/1.jpg",
      "src/images/Pitt/2.jpg",
      "src/images/Pitt/3.jpg",
